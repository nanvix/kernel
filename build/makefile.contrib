# Builds contrib.
contrib: contrib-hal

# Builds contrib headers.
contrib-headers: contrib-headers-hal

# Cleans contrib.
contrib-uninstall: contrib-uninstall-hal

# Cleans contrib headers.
contrib-uninstall-headers: contrib-uninstall-headers-hal

#===============================================================================
# HAL
#===============================================================================

# Builds HAL.
contrib-hal: make-dirs
	$(MAKE) -C $(CONTRIBDIR)/hal install PREFIX=$(ROOTDIR) RELEASE=$(RELEASE)

# Builds HAL headers.
contrib-headers-hal: make-dirs
	$(MAKE) -C $(CONTRIBDIR)/hal install-headers PREFIX=$(ROOTDIR) RELEASE=$(RELEASE)

# Cleans HAL.
contrib-uninstall-hal:
	$(MAKE) -C $(CONTRIBDIR)/hal uninstall PREFIX=$(ROOTDIR) RELEASE=$(RELEASE)

# Cleans HAL headers.
contrib-uninstall-headers-hal:
	$(MAKE) -C $(CONTRIBDIR)/hal uninstall-headers PREFIX=$(ROOTDIR) RELEASE=$(RELEASE)
